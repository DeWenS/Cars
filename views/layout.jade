doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css', rel='stylesheet', media='screen')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(type="text/javascript", src="http://maps.googleapis.com/maps/api/js?key=AIzaSyAq_4se7vldjJU-SzKGZYjsxzpS72dp4b8&sensor=FALSE")
    script(type="text/javascript", src="/js/socket.io-1.3.5.js")
  body
    .navbar.navbar-default.navbar-static-top
        .container
            .navbar-header
                a.navbar-brand Car watcher
            #navbar
                ul.nav.navbar-nav.navbar-right
                    if !(user)
                        li
                            a(href="/login") Login
                        li
                            a(href="/register") Register
                    else
                        li
                            a Hello, #{user.username}!
                        li
                            a(href="/logout") Logout
    block content

  script(src='http://code.jquery.com/jquery.js')
  script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')